<div class="columns is-centered">
<div class="column is-half"> 

<h1 class="my-5">Posts</h1>
    
     
    <% @posts.each do |post| %>
     <div class="box">
        <article class="media">
            <div class="media-content">
                <div class="content">
                    <strong><%= post.title %></strong><br/>
                    <% if user_signed_in? %>
                    <small><%= post.user.username %></small><br/>
                    <% end %>
                    <p><%= post.body %></p>
                </div>
                <% if user_signed_in?%>
                    <nav class="level">
                    <div class="level-left is-mobile">
                            <span class="icon mr-5"><%= link_to 'Show', post %></span>
                        
                            <span class="icon mr-5"><%= link_to 'Edit', edit_post_path(post) %></span>
                       
                            <span class="icon mr-5"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
                      
                    </div>
                    </nav>
                <% end %>
           </div>
        </article>
    </div>  
    <% end %>

<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
</div>
</div>





              
              
              
               
           
           
					
           
            
            
            
